<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center">Edit Comment</h1>
    <!--width : resize the name, imageUrl At <input>-->
    <div style="width: 30%; margin:30px auto;">
        <!--campground에 속한 comment를 action의 주소로 보냄?-->
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <!--add class name : form-group & add space btw elements -->
            <div class="form-group">
                <!--form-control : use bootstrap conponent-->
                <!--comment[element] 사용시 comment를 POST로 보내고 받을때
                req.body.comment에는 이미 text, author가 추가되어있다.-->
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">    
            </div>
            <div class="form-group">
                <!--btn-primary:btnColor, btn-blick:btn size-->
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/">Move to Home</a>    
    </div>
</div>
<% include ../partials/footer %>